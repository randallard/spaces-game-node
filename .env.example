# Feature Flags
# Set to 'false' or '0' to disable, 'true' or '1' to enable

# Enable Discord notifications (requires backend server)
# For GitHub Pages deployment, set to false
VITE_ENABLE_DISCORD_NOTIFICATIONS=true

# Enable URL shortening service (requires backend server)
# For GitHub Pages deployment, set to false
VITE_ENABLE_URL_SHORTENING=true

# Enable remote CPU opponent (fetches boards from server)
# For GitHub Pages deployment, set to false
VITE_ENABLE_REMOTE_CPU=true

# API Configuration
# Base URL for backend API (if using remote services)
VITE_API_BASE_URL=http://localhost:3001
